<div class="jumbotron text-center"><h1>Update Your Account</h1></div>

<%= form_for(@user) do |f| %>
<%= f.label :username%>
<%= f.text_field :username%>
<br>
<br>
<%= f.label :first_name %>
<%= f.text_field :first_name %>
<br>
<br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br>
<br>
<%= f.label :email %>
<%= f.text_field :email %>
<br>
<br>
<%= f.label :password %>
<%= f.text_field :password %>
<br>
<br>
<%= f.submit %>
<% end %>

<p><%= link_to "Home", home_path %></p>