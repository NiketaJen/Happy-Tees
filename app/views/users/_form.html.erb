<% if @errors %>
<ul>
    <% @errors.each do |msg| %>
        <li><%= msg %></li>
     <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %>
<br>
<br>
<%= f.label :last_name %>
<%= f.text_field :last_name %>
<br>
<br>
<%= f.label :email %>
<%= f.text_field :email %>
<br>
<br>
<%= f.label :password %>
<%= f.text_field :password %>
<br>
<br>
<%= f.submit %>
<% end %>